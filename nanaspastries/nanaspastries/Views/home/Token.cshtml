@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valide sus credenciales</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">
                <img src="https://i.pinimg.com/736x/ab/c1/0b/abc10b8f1a21a828f918bad1b235c57f.jpg" alt="Logo de Nana's Pastries" />
                <h1>Nana's Pastries</h1>

            </div>
            <p>Verifica que eres tu, ingresa tu token</p>
        </header>
        <div class="login-form">
            <form method="post" action="/Home/Ingreso">
                <div class="form-group">
                    <label>ID:</label>
                    <input type="text" name="id" size="50">
                    <label>Token:</label>
                    <input type="text" name="token" size="50">
                </div>
                <button type="submit">Ingresar</button>
            </form>
        </div>
    </div>
</body>
</html>
