
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de pedidos de @ViewBag.Idcliente</title>
    <link rel="stylesheet" href="~/Content/form.css">
</head>
<body>
    <div class="header">
        <div class="home-icon" onclick="window.location.href='/Home/Menu';">🏠</div>
        <div class="buttons">
            <button onclick="https://web.whatsapp.com/">📱</button>
            <button onclick="window.location.href = '/Home/Consultahisrepos';">🕒</button>
            <button onclick="window.location.href = '/Home/ConsulCarrito';">🛒</button>
            <button onclick="window.location.href ='/Home/Acercade';">ℹ️</button>
        </div>
    </div>
    <div class="container">
        <h1>Detalles de la consulta</h1>
        @foreach (var pedido in Model)
        {
            <table>
                <tr>
                    <th>ID pedido</th>
                    <td>@pedido.IdPedido</td>
                </tr>
                <tr>
                    <th>ID cliente</th>
                    <td>@pedido.IdCliente</td>
                </tr>
                <tr>
                    <th>Productos</th>
                    <td>@pedido.Productos</td>
                </tr>
                <tr>
                    <th>Cantidad</th>
                    <td>@pedido.Cantidad</td>
                </tr>
                <tr>
                    <th>Precio</th>
                    <td>@pedido.Precio</td>
                </tr>
                <tr>
                    <th>Total</th>
                    <td>@pedido.Total</td>
                </tr>
                <tr>
                    <th>Estado</th>
                    <td>@pedido.Estado</td>
                </tr>
                <tr>
            </table>
        }
            <button class="btn-large" onclick="window.location.href ='/Home/Consultapagar';">Pagar</button>
        </div>
</body>
</html>
